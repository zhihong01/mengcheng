.m-adv{max-width:1200px;margin:20px auto 3px;overflow;hidden;}
.m-content1,.m-content2,.m-content3{max-width:1200px;margin:0 auto;overflow:hidden;position:relative;}
.m-zcjd h1,.m-wjguifan h1,.m-wjqita h1{border-bottom:1px solid #ddd;margin-bottom:10px;font-size:20px;}
.m-zcjd h1 a,.m-wjguifan h1 a,.m-wjqita h1 a{display:inline-block;padding:0 15px;border-bottom:2px solid #d00d0d;height:50px;line-height:50px;color:#d00d0d;background:url(../images/news/up.png) no-repeat center bottom;font-weight:bold;}
.m-zcjd .m-shangji,.m-zcjd .m-benji,.m-wjguifan,.m-wjqita{width:49%;}
.m-zcjd .m-shangji .hd ul,.m-zcjd .m-benji .hd ul,.m-wjguifan .hd ul{height:35px;line-height:35px;text-align:center;}
.m-zcjd .m-shangji .hd ul li,.m-zcjd .m-benji .hd ul li,.m-wjguifan .hd ul li{float:left;padding:0 12px;font-size:18px;margin-right:10px;}
.m-zcjd .m-shangji .hd ul li.on,.m-zcjd .m-benji .hd ul li.on,.m-wjguifan .hd ul li.on{background:#ed5a5a;}
.m-zcjd .m-shangji .hd ul li.on a,.m-zcjd .m-benji .hd ul li.on a,.m-wjguifan .hd ul li.on a{color:#fff;}
.m-zcjd .m-shangji .bd li,.m-zcjd .m-benji .u-bd li,.m-wjguifan .bd li,.m-wjqita .bd li{line-height:38px;font-size:16px;padding-left:10px;background:url(../images/public/squer.png) no-repeat left center;}
.m-zcjd .m-shangji .bd li .date,.m-zcjd .m-benji .u-bd li .date,.m-wjguifan .bd li .date,.m-wjqita .bd li .date{float:right;font-size:14px;color:#999;}
.m-benji .u-hd ul{overflow:hidden;}
.m-benji .u-hd ul li{float:left;padding:0 12px;font-size:18px;line-height:36px;height:36px;}
.m-benji .u-hd ul li.on{border-bottom:2px solid #d00d0d;}
.m-zctj{clear:both;}
.m-zctj h3{margin-bottom:20px;font-size:16px;}
.m-zcjd h3 a{display:inline-block;padding:0 15px;border-bottom:2px solid #d00d0d;height:36px;line-height:36px;color:#d00d0d;}


@media screen and (max-width:1200px){
	.m-benji .u-hd ul li{padding:0 10px;font-size:17px;}
	
}

@media screen and (max-width:980px){
    .m-zcjd .m-shangji .bd li,.m-zcjd .m-benji .u-bd li,.m-wjguifan .bd li,.m-wjqita .bd li{font-size:14px;height:38px;line-height:38px;}
	.m-zcjd .m-shangji .bd li .date,.m-zcjd .m-benji .u-bd li .date,.m-wjguifan .bd li .date,.m-wjqita .bd li .date{font-size:12px;}
	.m-zcjd .m-shangji .bd li a.u-h,.m-zcjd .m-benji .u-bd li a.u-h,.m-wjguifan .bd li a.u-h,.m-wjqita .bd li a.u-h{display:inline-block;overflow:hidden;text-overflow:ellipsis;white-space: nowrap;width:210px;}
	.m-zcjd .m-shangji .bd li a,.m-zcjd .m-benji .u-bd li a,.m-wjguifan .bd li a,.m-wjqita .bd li a{display:inline-block;float:left;}
}

@media screen and (max-width:767px){
	.m-zcjd .m-shangji,.m-zcjd .m-benji,.m-wjguifan,.m-wjqita{width:100%;padding:0 10px;}
	.m-zcjd .m-shangji .bd li a.u-h,.m-zcjd .m-benji .u-bd li a.u-h,.m-wjguifan .bd li a.u-h,.m-wjqita .bd li a.u-h{width:260px;}
}
@media screen and (max-width:375px){
	.m-zcjd .m-shangji .bd li a.u-h,.m-zcjd .m-benji .u-bd li a.u-h,.m-wjguifan .bd li a.u-h,.m-wjqita .bd li a.u-h{width:134px;}
	.m-zcjd .m-shangji .hd ul li,.m-zcjd .m-benji .hd ul li,.m-wjguifan .hd ul li{font-size:14px;}
	.m-zcjd .m-shangji .bd li,.m-zcjd .m-benji .u-bd li,.m-wjguifan .bd li,.m-wjqita .bd li{font-size:13px;}
	.m-benji .u-hd ul li {
		padding: 0 4px;
		font-size: 13px;
	}
}